<body>

<header>
    <h1>JEE Advanced AI Tutor</h1>
    <span class="badge">Gemini 3 Pro Preview</span>
</header>

<div id="chat-window">
    <div class="message ai-msg">
        <div class="message-content">
            <div class="ai-name">TUTOR</div>
            Hello! I am your <strong>JEE Advanced & Boards</strong> assistant running on <strong>Gemini 3 Pro</strong>. 
            <br><br>
            I strictly specialize in:
            <ul>
                <li>Physics, Chemistry, Maths</li>
                <li>English & Physical Education</li>
                <li>Career Counselling</li>
            </ul>
            <br>
            Upload your questions (Image or PDF) or type a doubt. I will use LaTeX for mathematical precision.
        </div>
    </div>
</div>

<div id="input-container">
    <div class="input-wrapper">
        <div id="file-preview-area"></div>
        
        <div class="input-box">
            <button class="icon-btn" onclick="document.getElementById('file-input').click()" title="Upload Image or PDF">
                <!-- Paperclip Icon -->
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"></path>
                </svg>
            </button>
            <input type="file" id="file-input" accept="image/*,.pdf">

            <textarea id="user-input" placeholder="Ask a doubt..." onkeydown="handleEnter(event)"></textarea>
            
            <button id="send-btn" onclick="sendMessage()">SOLVE</button>
        </div>
    </div>
    <div style="font-size: 0.75rem; color: var(--text-secondary); margin-top: 10px;">
        Powered by Puter.js â€¢ Unlimited Free Access
    </div>
</div>

<script>
    // --- 1. CONFIGURATION ---
    const MODEL_NAME = 'gemini-3-pro-preview'; // As per your link
    
    // PDF Worker Setup
    pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';

    // System Persona (Injected into every prompt)
    const SYSTEM_INSTRUCTION = `
    ROLE: You are an expert JEE Advanced and Class 12 CBSE Board Tutor.
    SUBJECTS ALLOWED: Physics, Chemistry, Maths, English, Physical Education, Career Counselling.
    RULES:
    1. If the user asks about anything else (movies, politics, coding unrelated to studies), politely refuse.
    2. FORMAT: Use LaTeX for ALL math/science formulas.
       - Inline: $ equation $
       - Block: $$ equation $$
    3. TONE: Serious, academic, motivating, concise.
    4. IMAGE/PDF: If an image/text is provided, solve the specific question in it.
    `;

    // State
    let currentAttachment = null; // Stores { type: 'image'|'text', data: 'base64...' }
    let chatHistoryContext = ""; // We append past Q&A here to give the model "memory" manually

    // --- 2. FILE HANDLING ---
    const fileInput = document.getElementById('file-input');
    const previewArea = document.getElementById('file-preview-area');

    fileInput.addEventListener('change', async (e) => {
        if (e.target.files.length === 0) return;
        const file = e.target.files[0];

        // Clear previous attachment (Single file mode for simplicity with Puter's simple chat API)
        currentAttachment = null;
        previewArea.innerHTML = '<div class="preview-chip">Processing...</div>';

        try {
            if (file.type.startsWith('image/')) {
                // Convert Image to Base64
                const base64 = await toBase64(file);
                currentAttachment = { type: 'image', data: base64, name: file.name };
                showPreview(file.name, true, base64);
            } else if (file.type === 'application/pdf') {
                // Extract Text from PDF
                const text = await extractPdfText(file);
                currentAttachment = { type: 'text', data: text, name: file.name };
                showPreview(file.name, false);
            }
        } catch (err) {
            console.error(err);
            previewArea.innerHTML = '<div class="preview-chip" style="color:red">Error loading file</div>';
        }
        fileInput.value = ''; // Reset input
    });

    function showPreview(name, isImage, src = null) {
        previewArea.innerHTML = '';
        const div = document.createElement('div');
        div.className = 'preview-chip';
        div.innerHTML = `
            ${isImage ? `<img src="${src}">` : 'ðŸ“„'} 
            <span>${name}</span>
            <button onclick="clearAttachment()">Ã—</button>
        `;
        previewArea.appendChild(div);
    }

    function clearAttachment() {
        currentAttachment = null;
        previewArea.innerHTML = '';
    }

    // --- 3. CHAT LOGIC ---
    async function sendMessage() {
        const inputField = document.getElementById('user-input');
        const userText = inputField.value.trim();
        const sendButton = document.getElementById('send-btn');

        if (!userText && !currentAttachment) return;

        // UI Updates
        inputField.disabled = true;
        sendButton.disabled = true;
        sendButton.innerText = "Thinking...";
        
        // 1. Render User Message
        appendMessage('user', userText, currentAttachment);

        // 2. Prepare Prompt
        // Since Puter.js simple chat is stateless, we prepend the System Prompt + Short History + Current extracted PDF text
        let fullPrompt = `${SYSTEM_INSTRUCTION}\n\n`;

        // If we have history, add last 2 turns to keep context (simple memory)
        fullPrompt += chatHistoryContext;

        // If attachment is text (PDF), add it to prompt
        if (currentAttachment && currentAttachment.type === 'text') {
            fullPrompt += `\n[CONTEXT FROM PDF FILE '${currentAttachment.name}':]\n${currentAttachment.data}\n\n`;
        }
        
        // Add current question
        fullPrompt += `\nSTUDENT QUESTION: ${userText}`;

        // Prepare Arguments for Puter
        let puterArgs = [fullPrompt]; // First arg is always text
        
        // If attachment is image, add URL/Base64 as second arg (per doc)
        if (currentAttachment && currentAttachment.type === 'image') {
            puterArgs.push(currentAttachment.data); 
        }

        // Add Configuration (Model + Stream)
        puterArgs.push({
            model: MODEL_NAME,
            stream: true
        });

        // 3. Clear Input immediately
        inputField.value = '';
        const savedAttachment = currentAttachment; // Keep ref for UI
        clearAttachment();

        // 4. Create AI Message Bubble (Empty initially)
        const aiMessageDiv = createAiMessageDiv();
        const contentDiv = aiMessageDiv.querySelector('.message-content');
        let fullResponseText = "";

        try {
            // CALL PUTER AI
            // usage: puter.ai.chat(prompt, [image], options)
            const response = await puter.ai.chat(...puterArgs);

            // STREAM THE RESPONSE
            for await (const part of response) {
                if (part?.text) {
                    fullResponseText += part.text;
                    // Real-time render
                    contentDiv.innerHTML = `<div class="ai-name">TUTOR</div>` + marked.parse(fullResponseText);
                    // Live MathJax rendering (optional, but can be glitchy during stream, best to wait till end usually, 
                    // but we can try simple formatting here if needed. We'll wait for end for heavy math)
                    chatWindow.scrollTop = chatWindow.scrollHeight;
                }
            }

            // Final Render (Formatting & MathJax)
            contentDiv.innerHTML = `<div class="ai-name">TUTOR</div>` + marked.parse(fullResponseText);
            MathJax.typesetPromise([contentDiv]);

            // Save to History (Text only to save tokens)
            chatHistoryContext += `Student: ${userText}\nTutor: ${fullResponseText}\n`;

        } catch (error) {
            console.error(error);
            contentDiv.innerHTML += `<br><br><span style="color:#ff6b6b">Error: ${error.message}</span>`;
        } finally {
            inputField.disabled = false;
            sendButton.disabled = false;
            sendButton.innerText = "SOLVE";
            inputField.focus();
        }
    }

    // --- 4. HELPER FUNCTIONS ---

    const chatWindow = document.getElementById('chat-window');

    function createAiMessageDiv() {
        const div = document.createElement('div');
        div.className = 'message ai-msg';
        div.innerHTML = `<div class="message-content"><span style="animation:blink 1s infinite">Thinking...</span></div>`;
        chatWindow.appendChild(div);
        chatWindow.scrollTop = chatWindow.scrollHeight;
        return div;
    }

    function appendMessage(role, text, attachment) {
        const div = document.createElement('div');
        div.className = `message ${role}-msg`;
        
        let html = '';
        if (attachment && attachment.type === 'image') {
            html += `<img src="${attachment.data}" style="max-height: 200px; border-radius: 8px; margin-bottom: 8px; display:block;">`;
        }
        if (attachment && attachment.type === 'text') {
            html += `<div style="font-size:0.8rem; opacity:0.8; margin-bottom:5px;">ðŸ“„ Attached: ${attachment.name}</div>`;
        }
        
        // Escape HTML for user input to prevent XSS
        const safeText = text.replace(/&/g, "&amp;").replace(/</g, "&lt;").replace(/>/g, "&gt;");
        html += safeText.replace(/\n/g, '<br>');

        div.innerHTML = `<div class="message-content">${html}</div>`;
        chatWindow.appendChild(div);
        chatWindow.scrollTop = chatWindow.scrollHeight;
    }

    // Convert File to Base64
    const toBase64 = file => new Promise((resolve, reject) => {
        const reader = new FileReader();
        reader.readAsDataURL(file);
        reader.onload = () => resolve(reader.result);
        reader.onerror = error => reject(error);
    });

    // Extract PDF Text
    async function extractPdfText(file) {
        const arrayBuffer = await file.arrayBuffer();
        const pdf = await pdfjsLib.getDocument(arrayBuffer).promise;
        let text = "";
        // Limit to first 10 pages to prevent token overflow
        const maxPages = Math.min(pdf.numPages, 10); 
        for (let i = 1; i <= maxPages; i++) {
            const page = await pdf.getPage(i);
            const content = await page.getTextContent();
            text += content.items.map(item => item.str).join(" ") + "\n";
        }
        return text;
    }

    function handleEnter(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            sendMessage();
        }
    }
</script>

</body>
</html>
